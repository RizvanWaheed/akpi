						<div class="input-group input-group-sm">
							<div class="input-group-addon" style="border-color: #38b64d;"><i class="fa">Attachment</i>
							</div>
							{{input type='file' class="form-control filestyle" data-buttonName="btn-abacus" data-buttonText="Upload" data-icon="true" data-placeholder="File" data-iconName="fa fa-paperclip" data-buttonBefore="true"  name="abacusFile" id="abacusFile" value=activities.activitiesEscalations.attachment  multiple="multiple" }}
