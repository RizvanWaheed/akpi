<div class="row">
  <div class="col-md-3">
    <div class="box box-abacus">
      <!--<div class="box-header">
                  <h3 class="box-title">Add MonitoringFors</h3>
                </div> /.box-header -->
      <div class="box-body">
        <form monitoringFor="form">
          <div class="box-body">{{input type="hidden" value=monitoringFor.id}}
            <div class="form-group">
              <label for="name">Campaigns</label>
              {{input class="form-control" label="Name" placeholder="Enter Campaign" valueBinding=monitoringFor.name}}
            </div>
            <div class="form-group">
              <label for="name">Category Level</label>
              {{input type="number" class="form-control" label="Name" placeholder="Enter Category Level" valueBinding=monitoringFor.category_level}}
            </div>
          </div><!-- /.box-body -->
          <div class="box-footer">
            <button type="button" class="btn btn-abacus btn-flat btn-sm" {{ action "save" monitoringFor }}>Save</button>
            <button type="button" class="btn btn-abacus btn-flat btn-sm" {{ action "reset" }}>Reset</button>
          </div>
        </form>
      </div>
    </div><!-- /.box -->
  </div><!-- /.col -->
  <div class="col-md-9">
    <div class="box box-abacus">
      <!--<div class="box-header">
                  <h3 class="box-title">MonitoringFors List</h3>
                </div> /.box-header -->
      <div class="box-body" style="height:400px; overflow-y:auto; overflow-x:hidden">
        <div class="table-responsive no-padding">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 10px">ID</th>
                <th>Name</th>
                <th>Category Level</th>
                <th style="width: 100px">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each monitoringFors in controller}}
              <tr>
                <td>{{monitoringFors.id}}</td>
                <td><span class="text-green" style="cursor:pointer" {{ action "edit" monitoringFors   }}>
                    {{monitoringFors.name}} </span> </td>
                <td> {{monitoringFors.category_level}} </td>
                <td><button class="btn btn-danger btn-flat btn-xs" {{action "delete" monitoringFors  }}>Delete</button>
                </td>
              </tr>
              {{/each}}</tbody>
          </table>
        </div>
      </div>

    </div><!-- /.box -->


  </div><!-- /.col -->

</div>
