<div class="col-md-2">
	<div class="btn-group btn-group-sm pull-right">
		<button id="funcCallReload" type="button" class="btn btn-flat btn-sm btn-abacus  btn-app btn-app-custom"
			{{action "funcCallReload" this}}><i class="fa fa-refresh"></i> Refresh </button>
		<button id="funcCallBreak" type="button" class="btn btn-flat btn-sm btn-abacus  btn-app btn-app-custom"
			{{action "funcCallBreak" this}} {{bind-attr disabled="!logout" }}><i class="fa fa-pause"></i> Pause
		</button>
		<button id="funcCallResume" type="button" class="btn btn-flat btn-sm btn-abacus  btn-app btn-app-custom"
			{{action "funcCallResume" this}} {{bind-attr disabled="logout" }}><i class="fa fa-play"></i> Resume
		</button>
	</div>
</div>
