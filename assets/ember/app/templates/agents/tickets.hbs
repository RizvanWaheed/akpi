					</div>
					{{/if}}

				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6 col-xs-6">
						<input type="submit" class="form-control btn btn-abacus btn-flat btn-sm" value="Save">
					</div>
					<div class="col-md-6 col-sm-6 col-xs-6">
						<input type="reset" class="form-control btn btn-abacus btn-flat btn-sm" value="Reset">
					</div>
				</div>
			</form>
		</div>
