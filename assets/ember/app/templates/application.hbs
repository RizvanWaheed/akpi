<div class="modal modal-abacus fade" id="resetPasswordModel" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<form role="form">
			<div class="modal-content">
				<div class="modal-header clearfix">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title"><i class="fa fa-bar-chart-o"></i><span> Reset Password </span></h4>
				</div>
				<div class="modal-body clearfix">
					<div class="form-group col-xs-12 ">
						<label for="oldPassword">Current Password</label>
						{{input type="password" class="form-control " label="Old Password" id="oldPassword" placeholder="Enter Current Password"}}
					</div>
					<div class="form-group col-xs-12 ">
						<label for="newPassword">New Password</label>
						{{input type="password" class="form-control " label="New Password" id="newPassword" placeholder="Enter New Password"}}
					</div>
					<div class="form-group col-xs-12 ">
						<label for="rnewPassword">Retype New Password</label>
						{{input type="password" class="form-control " label="New Password" id="rnewPassword" placeholder="Retype New Password"}}
					</div>


				</div>
				<div class="modal-footer clearfix">
					<button class="btn btn-abacus btn-flat" {{action "doneResetPasswordModel" target="view" }}>Change
						Password</button>
					{{!-- <button class="btn btn-abacus btn-flat" {{action "closeResetPasswordModel" target="view"  }}>Reset</button> --}}
				</div>
			</div><!-- /.modal-content -->
		</form>
	</div><!-- /.modal-dialog -->
</div>
