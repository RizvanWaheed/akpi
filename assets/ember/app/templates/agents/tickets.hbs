							{{view "select" class="form-control input-sm" contentBinding="subDepartments"  id="emailSubDepartment" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="activities.activitiesEscalations.sub_department_id" prompt="Select a sub-department ..."}}
