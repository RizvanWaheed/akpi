<div class="col-md-12 no-padding">
  <div class="box box-abacus">
    <div class="box-header">
      <h4>Add Rendomizer</h4>
    </div>

    <div class="box-body">
      {{input type="hidden" valueBinding="RendomizerId" }}
      <div class="row">
        <div class="form-group form-group-sm col-md-2 col-sm-6 col-xs-12">
          <label for="monitoring_for">Campaign For</label>
          {{view "select" class="form-control input-sm"  content=monitoredBy  id="monitoring_for" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="rendomizer.monitoring_for_id"  prompt="Select Campaing ..."}}
        </div>
        <div class="form-group form-group-sm col-md-2 col-sm-6 col-xs-12">
          <label for="belong_id">Type</label>
          {{view "select" class="form-control input-sm"  contentBinding="belongs"  id="belong_id" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="rendomizer.belong_id"  prompt="Select Type ..."}}
        </div>
        <div class="form-group form-group-sm col-md-2 col-sm-6 col-xs-12">
          <label for="user_id">QA Officer</label>
          {{view "select" class="form-control input-sm"  contentBinding="officer"  id="user_id" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="rendomizer.user_id"  prompt="Select QA Officer ..."}}
        </div>
        <div class="form-group form-group-sm col-md-2 col-sm-6 col-xs-12">
          <label for="user_id">Team Lead</label>
          {{view "select" class="form-control input-sm"  contentBinding="teamleads"  id="teamlead_id" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="rendomizer.teamlead_id"  prompt="Select Teamlead..."}}
        </div>
        <div class="form-group form-group-sm  col-md-2 col-sm-6 col-xs-12">
          <label for="percentage">Agents Count {{tlagentcount}}</label>
          {{input type="number" class="form-control input-sm" label="percentage" id="percentage" placeholder="Enter agent count..." valueBinding="rendomizer.percentage"}}
        </div>
        <div class="form-group form-group-sm col-md-2 col-sm-6 col-xs-12">
          <label for="percentage">`</label>
          <input type="button" class="form-control btn btn-abacus btn-flat btn-sm" {{action "save" rendomizer}}
            value="Save">
        </div>
      </div>
    </div>
    <div class="box-footer">
      <div class="form-group form-group-sm ">
      </div>
    </div>

  </div><!-- /.box -->
</div><!-- /.col -->

<div class="col-md-12 no-padding ">
  <div class="box box-abacus">
    <div class="box-header">
      <div class="col-md-6">
        <h3 class="box-title">Rendomizer Conditions </h3>
        {{!--  <small class="label pull-right bg-green">Total Tickets: {{ticketTotals}}</small> --}}
      </div>
      <div class="col-md-6">
        <button type="submit" class="btn btn-abacus btn-flat btn-xs pull-right" {{action "reload" }}>
          <i class="fa fa-refresh"></i> Reload
        </button>
      </div>
    </div><!-- /.box-header -->
    <div class="box-body" style="height:400px">
      <table class="table table-bordered">
        <tr>
          <th>Campaign</th>
          <th>Type</th>
          <th>QA Officer</th>
          <th>Teamlead</th>
          <th>Value</th>
          <th>Delete</th>
        </tr>
        {{#each rendomizers in teekits}}
        <tr>
          <td>{{rendomizers.campaing}}</td>
          <td>{{rendomizers.type}}</td>
          <td>{{rendomizers.agent}}</td>
          <td>{{rendomizers.teamlead}}</td>
          <td>{{rendomizers.percentage}}</td>
          <td><button class="btn btn-danger btn-flat btn-xs" {{action "delete" rendomizers  }}>
              <i class="fa fa-trash"></i>
            </button></td>
        </tr>
        {{else}}
        <tr>
          <td></td>
          <td colspan="3"> No Assignment (click on reload button to check).</td>
          <td></td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>
<div class="col-md-12 no-padding">
  <div class="box box-abacus">
    <div class="box-header">
      <h4>Execute Rendomizer Process</h4>
    </div>

    <div class="box-body">

      <div class="row">
        <div class="form-group form-group-sm  col-md-3 col-sm-6 col-xs-12">
          <label for="communicationDate">Communication Date </label>
          <div class="input-group input-group-sm date">
            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
            {{input class="form-control input-sm pull-right" readonly="true" id="communicationDate" placeholder="Enter Communication Date" valueBinding="communicationDate" }}
          </div>
        </div>
        <div class="form-group form-group-sm  col-md-3 col-sm-6 col-xs-12">
          <label for="commuDate">`</label>
          <input type="button" class="form-control btn btn-abacus btn-flat btn-sm" {{action "run" }}
            value="Run Rendomizer">
        </div>
      </div>
      {{!--  <div class="form-group-sm  col-md-2 col-sm-6 col-xs-12">
          <label for="ticketId">*</label>
         
        </div> --}}
    </div>
    <div class="box-footer">

    </div>
  </div>
</div><!-- /.box -->
<div class="clearfix"><br></div>
