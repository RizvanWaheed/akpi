<div class="col-md-2">
	<div class="info-box-custom">
		<span class="info-box-icon-custom bg-aqua"><i class="fa fa-bullhorn"></i></span>
		<div class="info-box-content-custom">
			<span class="info-box-text">Current Status</span>
			<span class="info-box-number-custom">{{currentStatus}}</span>
		</div>
	</div>
</div>
<div class="col-md-2">
	<div class="info-box-custom">
		<span class="info-box-icon-custom bg-red"><i class="fa fa-clock-o"></i></span>
		<div class="info-box-content-custom">
			<span class="info-box-text">Total Break</span>
			<span class="info-box-number-custom">{{breakTime}}</span>
		</div>
	</div>
</div>
<div class="col-md-2">
	<div class="info-box-custom">
		<span class="info-box-icon-custom bg-green"><i class="fa fa-clock-o"></i></span>
		<div class="info-box-content-custom">
			<span class="info-box-text">Total Time</span>
			<span class="info-box-number-custom">{{loginTime}}</span>
		</div>
	</div>
</div>
