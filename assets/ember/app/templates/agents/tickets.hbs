					<div class="form-group form-group-sm col-md-3 col-sm-6 col-xs-12">
						<div class="input-group input-group-sm">
							<div class="input-group-addon" style="border-color: #38b64d;"><i class="fa">Status</i></div>
							{{view "select" class="form-control input-sm"  contentBinding="agentStatus"  id="agentStatusId" optionValuePath="content.id" optionLabelPath="content.name" valueBinding="activities.status"  prompt="Select Status ..."}}
						</div>
					</div>
					<div class="form-group form-group-sm  col-md-3 col-sm-6 col-xs-12">
						<div class="input-group input-group-sm">
							<div class="input-group-addon" style="border-color: #38b64d;"><i class="fa">Ticket ID</i>
